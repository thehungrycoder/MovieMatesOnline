.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#"} Moviemates
      .nav-collapse
        %ul.nav
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
              Movies
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Latest Movies', latest_movies_path
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
              Reviews
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Write Review', new_review_path
              %li= link_to 'My Reviews', reviews_path
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
              Mates
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'My Mates', :mates_index
              %li= link_to 'Pending Requests', :mates_pending

        %p.navbar-text.pull-right
          - if user_signed_in?
            Logged in as
            = get_user_avatar(current_user)
            = link_to (current_user.name.present?) ? current_user.name : current_user.email, :show_my_profile
            = link_to t(:logout), destroy_user_session_path, :method => :delete
          - else
            = link_to t(:login), new_user_session_path