- if movie.present?
  .movie
    %h3
      = link_to movie.name, movie_path(movie.id)

    .poster
      = link_to(image_tag(get_movie_poster_path(movie.cover_image), {:width => 80, :height => 100}), movie_path(movie.id))
    .info
      - if movie.released.present?
        %strong Released
        = movie.released
        %br
      - if movie.certificate.present?
        %strong Certificate
        = movie.certificate
        %br
    .overview
      - if movie.overview.present?
        = truncate(movie.overview, {length: 200})
    /= link_to t('.edit', :default => t("helpers.links.edit")), edit_movie_path(movie), :class => 'btn btn-mini'
    /= link_to t('.destroy', :default => t("helpers.links.destroy")), movie_path(movie), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'